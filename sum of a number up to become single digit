import java.util.*;
class summation
{
 public static void main(String arg[])
{
 int n,m,rev=0,r,sum=0;
 Scanner sc=new Scanner(System.in);
 System.out.println("enter the first number");
 n=sc.nextInt();
m=n;
 while(n!=0)
{
 r=n%10;
 rev=rev+r;
 n=n/10;
}
while(rev!=0)
{
 r=rev%10;
 sum=sum+r;
rev=rev/10;
}
 System.out.println("print the sum:"+sum);

}
}
